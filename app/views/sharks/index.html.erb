<p style="color: green" id="notice" class="show_alert"><%= notice %></p>
<div class="facts_container">
<h1 class="shark_home_title">Sharks</h1>

<table class="container">
<thead>
  <tr>
    <th> Name </th>
    <th> Facts </th>
    <th colspan="3"></th>
  </tr>
<thead>

<tbody>
  <% @sharks.each do |shark|%>
    <tr class="show-table">
      <td> <%= shark.name %> </td>
      <td> <%= shark.facts %> </td>
      <td> <%= link_to 'Show', shark, class: 'btn btn-default' %> </td>
      <td> <%= link_to 'Edit', edit_shark_path(shark), class: 'btn btn-default' %> </td>
      <td> <%= link_to 'Destroy', shark, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %> </td>
    </tr>
  <% end %>
</tbody>
</table>

<div class="new_shark_btn container">
<%= link_to "New shark", new_shark_path, class: 'btn btn-success' %>
</div>
</div>