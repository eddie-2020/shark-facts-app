<%= form_with(model: shark, local: true) do |form| %>
  <% if shark.errors.any? %>
    <div id="error_explanation" class="error_explanation_prompt" style="color: red">
      <h2 class="error_counter"><%= pluralize(shark.errors.count, "error") %> prohibited this shark from being saved:</h2>

      <ul>
        <% shark.errors.each do |error| %>
          <li class="error_list"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :facts, style: "display: block" %>
    <%= form.text_area :facts, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.submit(class: 'btn btn-success') %>
  </div>
<% end %>
